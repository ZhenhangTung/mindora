<div>
  <%= render 'works/parent_menu' %>
  <main class="py-10 lg:pl-72">
    <div class="mx-auto max-w-2xl px-4 pb-24 pt-16 sm:px-6 lg:max-w-7xl lg:px-8">
      <h2 class="sr-only">Checkout</h2>

      <div class="lg:grid lg:grid-cols-2 lg:gap-x-12 xl:gap-x-16">
        <%= form_with(model: @questionnaire, url: works_questionnaires_path, local: true) do |form| %>
          <h2 class="text-lg font-medium text-gray-900">设计调研问卷</h2>

          <div class="mt-4 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-4">
            <div class="sm:col-span-2">
              <%= form.label :title, "问卷目的", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-1">
                <%= form.text_area :title, placeholder: "请描述你的调研目的是什么？\n示例：评估用户对现有产品的满意度", required: true, rows: 2, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :target_user, "目标人群", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-1">
                <%= form.text_area :target_user, placeholder: "请描述您的目标用户群体是哪些人?\n示例：一线城市白领女性", required: true, rows: 2,  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

          </div>

          <div class="mt-10 border-t border-gray-200 pt-10">
            <h2 class="text-lg font-medium text-gray-900">问卷内容</h2>

            <div class="mt-4 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-4">

              <%= form.fields_for :questions do |q_form| %>
                <div class="sm:col-span-2">
                  <div class="mt-1">
                    <%= q_form.text_field :content, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="mt-6 flex items-center justify-end gap-x-6">
            <%= link_to "取消", works_questionnaires_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
            <%= form.submit "保存", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          </div>
        <% end %>


        <div class="mt-10 lg:mt-0">
          <h2 class="text-lg font-medium text-gray-900">交流问卷</h2>

          <%= render 'shared/chat_form', form_path: works_session_chats_path(@session), session: @session, chat_histories: @chat_histories %>
        </div>
      </div>
    </div>
  </main>
</div>
