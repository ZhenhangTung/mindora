<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= image_tag 'logo.png', class: 'mx-auto h-12 w-auto', alt: 'Your Company' %>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">登录账户</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <%= form_with(url: login_path, local: true, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :phone_number, "手机号", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-1">
          <%= form.telephone_field :phone_number, autofocus: true, required: true,
                                   pattern: "\\d{11}", placeholder: "请输入你的手机号", title: "手机号必须是11位数字",
                                   autocomplete: "tel-national",
                                   class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.label :password, "密码", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-1">
          <%= form.password_field :password, autocomplete: "current-password", required: true,
                                  placeholder: "至少8字符，包含数字", pattern: "(?=.*\\d).{8,}",
                                  title: "密码必须至少包含8个字符，且至少包含一个数字",
                                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.submit "登录", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <p class="mt-2 text-center text-sm text-gray-600">
      还不是产品汪汪用户？<%= link_to "点击注册", signup_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
